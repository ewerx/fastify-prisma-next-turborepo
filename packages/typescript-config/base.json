{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "lib": ["es2023"],
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "es2022",

    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "noUncheckedIndexedAccess": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
