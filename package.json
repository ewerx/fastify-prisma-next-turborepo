{
  "name": "moonlight-app",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:web": "turbo run build --filter=@repo/web",
    "start:web": "pnpm --filter=@repo/web start",
    "db:migrate:deploy": "turbo run db:migrate:deploy",
    "db:push": "turbo run db:push",
    "db:generate": "turbo run generate",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "prettier": "^3.4.2",
    "turbo": "^2.3.3"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=22"
  }
}
